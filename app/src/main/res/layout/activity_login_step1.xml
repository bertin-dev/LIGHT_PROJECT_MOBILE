<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_login_step1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.authentication.LoginStep1">


    <LinearLayout
        android:id="@+id/authWindows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="@string/telephone"
            android:textColorHint="@color/primary_color"
            app:counterEnabled="false"
            app:hintTextColor="@color/primary_color"
            app:counterTextColor="@color/white"
            app:counterTextAppearance="@color/white"
            app:errorTextColor="@color/white"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/primary_color"
                android:textColorHint="@color/primary_color" />


        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <Button
                android:id="@+id/btnloginStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/btn_rounded"
                android:padding="10dp"
                android:shadowDx="@android:integer/config_longAnimTime"
                android:text="@string/connexion"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pgbar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>